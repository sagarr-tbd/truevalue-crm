# =============================================================================
# TrueValue CRM - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Security (must match platform .env)
GATEWAY_SECRET=your-gateway-secret
CRM_SERVICE_SECRET=your-crm-service-secret
GATEWAY_SERVICE_SECRET=your-gateway-service-secret
AUTH_SERVICE_SECRET=your-auth-service-secret
ORG_SERVICE_SECRET=your-org-service-secret
BILLING_SERVICE_SECRET=your-billing-service-secret

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_CRM_API_URL=http://localhost:8001

# Debug (set to false in production)
DEBUG=true
