# TrueValueCRM - CRM Frontend Environment Variables

# API Gateway URL (TrueValueCRM backend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Shell/Main App URL (for redirects after logout)
NEXT_PUBLIC_SHELL_URL=http://localhost:3000

# Use mock API instead of real backend (set to "true" for development without backend)
NEXT_PUBLIC_USE_MOCK_API=false
